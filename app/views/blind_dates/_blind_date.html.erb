<div id="<%= dom_id blind_date %>" class="w-7/8 m-5 items-center mx-5 bg-white shadow-lg rounded-lg border-double border-4 border-sky-500">

  <% if blind_date.restaurant.nil? %>
    <div class="p-4 text-center">
      <h2 class="text-lg mb-2">No Restuarant Selected till now by Team Leader</h2>
      <p class="text-gray-700 text-lg font-bold underline">Please ask <%= blind_date.team.name %> leader of team to select restaurant</p>
      <p class="text-gray-700 text-md">Date & Time: <%= time_format(blind_date.date) %></p>
    </div>
  <% else %>
    <div class="p-4 text-center">
      <h2 class="text-xl font-semibold mb-2">Restaurant Name: <%= blind_date.restaurant %></h2>
      <p class="text-gray-700 text-sm">Team Name: <%= blind_date.team.name %></p>
      <p class="text-gray-700 text-md">Date & Time: <%= time_format(blind_date.date) %></p>
    </div>
  <% end %>

  <div class="px-4 py-2 text-center">
    <ul class="text-gray-700 text-sm bg-gray-100">
      <p class="text-gray-700 text-sm">Team Leader: <%= blind_date.team.leader.name %></p>
    </ul>
  </div>

  <div class="flex flex-wrap w-full px-4 py-2 px-3 bg-gray-200 text-sm ">
    <% if action_name != "show" %>
      <div class="flex flex-row border-spacing-2 w-full gap-4 justify-between">
        <% blind_date.team.employees.each do |employee| %>
          <div class="flex flex-col content-center border-double border-4 border-sky-500 rounded-lg">
            <h1 class=" text-bold ml-1 mr-1">Name: <%= employee.name %></h1>
            <p class="m-1 text-sm">Email: <%= employee.email %></p>
            <p class="m-1">Department: <%= employee.department %></p>
          </div>
        <% end %>
        <!--        <li class=" w-1/2 m-5 "><%#= link_to "Show this employee", employee, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium text-center w-full bg-gray-300 rounded-full" %></li>-->
        <!--        <li class=" w-1/2 m-5  "><%#= link_to 'Edit this employee', edit_employee_path(employee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium text-center w-full bg-gray-300 rounded-full" %></li>-->
      </div>
    <% end %>
  </div>
</div>



